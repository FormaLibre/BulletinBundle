{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
     <h1> {{ periode.name }} - Bulletin de {{ eleve.getFirstName() }} {{ eleve.getLastName() }}</h1>
    </div>
    <div class="panel-body">
        <div class="panel panel-info">
            <div class="panel-heading">Valeurs particulières</div>
            <div class="panel-body">
                {% for pointCode in pointCodes %}
                    <div>
                        {{ pointCode.getInfo()|trans({}, 'bulletin') }} : <b>{{ pointCode.getCode() }}</b>
                    </div>
                {% endfor %}
                N'oubliez pas d'<b>enregistrer</b> en cliquant sur le bouton en bas de page
            </div>
        </div>
        <form action="" method="POST" {{ form_enctype(form) }} autocomplete="off">
            <table class="table">
                <thead><tr>
                    <th>Matière</th>
                    <th>Point</th>
                    <th>Total</th>
                    {% if periode.onlyPoint != 1 %}
                    
                        {% if hasSecondPoint %}
                            <th>{{ secondPointName }} ( % )</th>
                        {% endif %}
                    
                        {% if hasThirdPoint %}
                            <th>{{ thirdPointName }} ( / 10 )</th>
                        {% endif %}
                    {% endif %}
                    
                    {% if isBulletinAdmin %}
                        <th></th>
                    {% endif %}
                </tr></thead>
                <tbody>
                {% for pemp in form.pemps %}
                    <tr>
                        <td class="matiere">
                            {% for matiere in matieres %}
                                {% if matiere.getId() == pemp.vars.value.matiere.getId %}
                                {{ matiere.getCourseTitle() }}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td class="point">{{ form_widget(pemp.point) }}</td>
                        <td class="total">
                            {% set matiereTotal = pemp.vars.value.matiere.getTotal() %}
                            {% set coefficient = pemp.vars.value.periode.getCoefficient() %}
                            {% set total = matiereTotal * coefficient %}
                            <input class="form-control" value="{{ total }}" disabled>
                        </td>

                        {% if periode.onlyPoint != 1 %}
                            {% if hasSecondPoint %}
                                <td class="presence">{{ form_widget(pemp.presence) }}</td>
                            {% endif %}

                            {% if hasThirdPoint %}
                                <td class="comportement">{{ form_widget(pemp.comportement) }}</td>
                            {% endif %}
                        {% endif %}

                        {% if isBulletinAdmin %}
                           <td>
                                <i class="btn btn-danger fa fa-trash delete-pemp-btn"
                                   data-periode-id="{{ periode.getId() }}"
                                   data-eleve-id="{{ eleve.getId() }}"
                                   data-matiere-id="{{pemp.vars.value.matiere.getId}}"
                                >
                                </i>
                                    {% set locked = allLockStatus[pemp.vars.value.matiere.getId] %}

                                    {% if locked %}
                                        <button class="btn btn-warning lock-btn"
                                                data-session-id="{{ pemp.vars.value.matiere.getId() }}"
                                                data-periode-id="{{ periode.getId() }}"
                                        >
                                            <i class="fa fa-unlock"></i>
                                        </button>
                                    {% else %}
                                        <button class="btn btn-warning lock-btn"
                                                data-session-id="{{ pemp.vars.value.matiere.getId() }}"
                                                data-periode-id="{{ periode.getId() }}" }}
                                        >
                                            <i class="fa fa-lock"></i>
                                        </button>
                                    {% endif %}
                                </button>
                            </td>
                        {% endif %} 
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <table>
                {% for pemd in form.pemds %}
                <tr><td>{{ form_widget(pemd.divers) }}</td><td>{{ form_widget(pemd.point) }}</td><td>{{ form_widget(pemd.total) }}</td></tr>
                {% endfor %}
            </table>
            <br>
            {{ form_widget(form.save) }}
        </form>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
        src='{{ asset('bundles/formalibrebulletin/js/bulletinEdit.js') }}'
        type="text/javascript">
    </script>
    <script>
        $(".lock-btn").on("click", function(event) {
            event.preventDefault();
            var sessionId = $(this).data('session-id');
            var periodeId = $(this).data('periode-id');
            var url = Routing.generate('formalibreBulletinLockStatusSwitch', {'periode': periodeId, 'session': sessionId});
            $.ajax({
                url: url,
                success: function(data) {
                   window.location.reload();
                }
            });
     });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/formalibrebulletin/css/bulletinEdit.css')}}"/>
{% endblock %}