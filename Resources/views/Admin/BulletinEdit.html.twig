{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
     <h1> {{ periode.name }} - Bulletin de {{ eleve.getFirstName() }} {{ eleve.getLastName() }}</h1>
    </div>
    <div class="panel-body">
        <div class="panel panel-info">
            <div class="panel-heading">Valeurs particulières</div>
            <div class="panel-body">
                Certificat médical : <b>888</b><br />
                Non évalué : <b>999</b><br/>
                N'oubliez pas d'<b>enregistrer</b> en cliquant sur le bouton en bas de page
            </div>
        </div>
        <form action="" method="POST" {{ form_enctype(form) }} autocomplete="off">
            <table class="table">
                <thead><tr>
                    <th>Matière</th>
                    <th>Point</th>
                    <th>Total</th>
                    {% if periode.onlyPoint != 1 %}
                    
                        {% if hasSecondPoint %}
                            <th>{{ secondPointName }} ( % )</th>
                        {% endif %}
                    
                        {% if hasThirdPoint %}
                            <th>{{ thirdPointName }} ( / 10 )</th>
                        {% endif %}
                    {% endif %}
                    
                    {% if isBulletinAdmin %}
                        <th></th>
                    {% endif %}
                </tr></thead>
                <tbody>
                {% for pemp in form.pemps %}
                    <tr>
                        <td class="matiere">
                            {% for matiere in matieres %}
                                {% if matiere.getId() == pemp.vars.value.matiere.getId %}
                                {{ matiere.getCourseTitle() }}
                                {% endif %}
                            {% endfor %}
                        </td>
                        <td class="point">{{ form_widget(pemp.point) }}</td>
                        <td class="total">{{ form_widget(pemp.total) }}</td>

                        {% if periode.onlyPoint != 1 %}
                            {% if hasSecondPoint %}
                                <td class="presence">{{ form_widget(pemp.presence) }}</td>
                            {% endif %}

                            {% if hasThirdPoint %}
                                <td class="comportement">{{ form_widget(pemp.comportement) }}</td>
                            {% endif %}
                        {% endif %}

                        {% if isBulletinAdmin %}
                           <td>
                                <i class="btn btn-danger fa fa-trash delete-pemp-btn"
                                   data-periode-id="{{ periode.getId() }}"
                                   data-eleve-id="{{ eleve.getId() }}"
                                   data-matiere-id="{{pemp.vars.value.matiere.getId}}"
                                >
                                </i>
                                    {% set locked = false %}

                                    {% for oneLockStatus in allLockStatus %} 
                                        {% if oneLockStatus.getMatiere.getId() == pemp.vars.value.matiere.getId and oneLockStatus.getPeriode().getId() == periode.getId() %}
                                            {% set locked = oneLockStatus.getLockStatus() %}
                                        {% endif %}
                                    {% endfor %}
      
                                    {% set params = {'session': pemp.vars.value.matiere.getId, 'periode': periode.getId()} %}
                                    {% if locked %}
                                        <a class="btn btn-warning lock-btn" href="{{ path('formalibreBulletinUnlockPoint', params) }}"> <i class="fa fa-unlock" href="{{ path('formalibreBulletinUnlockPoint', params) }}"></i> </a>
                                    {% else %}
                                        <a class="btn btn-warning lock-btn" href={{ path('formalibreBulletinLockPoint', params) }}> <i href={{ path('formalibreBulletinLockPoint', params) }} class="fa fa-lock"></i> </a>
                                    {% endif %}
                                </button>
                            </td>
                        {% endif %} 
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <table>
                {% for pemd in form.pemds %}
                <tr><td>{{ form_widget(pemd.divers) }}</td><td>{{ form_widget(pemd.point) }}</td><td>{{ form_widget(pemd.total) }}</td></tr>
                {% endfor %}
            </table>
            {{ form_widget(form.save) }}
        </form>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script
        src='{{ asset('bundles/formalibrebulletin/js/bulletinEdit.js') }}'
        type="text/javascript">
    </script>
    <script>
        $(".lock-btn").on("click", function(event) {
        event.preventDefault();
        var url = $(event.target).attr('href');
        $.ajax({
            url: url,
            success: function(data) {
               window.location.reload();
            }
        });
     });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/formalibrebulletin/css/bulletinEdit.css')}}"/>
{% endblock %}