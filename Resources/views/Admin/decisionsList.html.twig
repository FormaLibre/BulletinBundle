{% extends "ClarolineCoreBundle:Administration:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
        <div class="dropdown pull-right">
            <i class="fa fa-cogs dropdown-toggle pointer-hand"
               data-toggle="dropdown"
            >
            </i>
            <ul class="dropdown-menu">
                <li>
                    <a href="{{ path('formalibreBulletinAdminIndex') }}">
                        Admin Bulletin
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibre_bulletin_configure_form') }}">
                        Configuration
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibre_bulletin_matieres_options_management') }}">
                        Gestion des matières
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibre_bulletin_groups_management') }}">
                        {{ 'class_management'|trans({}, 'bulletin') }}
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibreBulletinDecisionsList') }}">
                        Gestion des décisions
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibreBulletinGroupeTitulairesList') }}">
                        Gestion des titulaires
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibre_bulletin_point_divers_management') }}">
                        Gestion des points divers
                    </a>
                </li>
                <li>
                    <a href="{{ path('formalibreBulletinPeriodesGroup') }}">
                        Gestion des groupes de périodes
                    </a>
                </li>
            </ul>
        </div>
        <h1>Liste des décisions</h1>
    </div>
    <div class="panel-body">
        {% if decisions|length > 0 %}
            <div class="table-responsive">
                <table class="table">
                    {% for decision in decisions %}
                        <tr>
                            <td>
                                {{ decision.getContent() }}
                                
                                {% if decision.getWithMatiere() %}
                                    [ Liste de matières ]
                                {% endif %}
                            </td>
                            <td>
                                <span class="btn btn-default edit-decision-btn"
                                      data-decision-id="{{ decision.getId() }}"
                                >
                                    <i class="fa fa-edit"></i>
                                </span>
                                <span class="btn btn-danger delete-decision-btn"
                                      data-decision-id="{{ decision.getId() }}"
                                >
                                    <i class="fa fa-trash">
                                    </i>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        {% else %}
            <div class="alert alert-warning">
                Aucune décision
            </div>
        {% endif %}
        <br>
        <span class="btn btn-primary" id="decision-create-btn">
            <i class="fa fa-plus-circle"></i>
            Ajouter une décision
        </span>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src='{{ asset('bundles/formalibrebulletin/js/decisionsList.js') }}'
            type="text/javascript">
    </script>
{% endblock %} 