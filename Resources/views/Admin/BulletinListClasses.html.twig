{% extends "ClarolineCoreBundle:Workspace:layout.html.twig" %}

{% block section_content %}
    <div class="panel-heading">
        <h1>Toutes les classes</h1>
    </div>
    <div class="panel-body">
        <table class="table">
        {% for group in groups %}
            <tr>
                <td><a href="{{ path ('formalibreBulletinListEleve', {'periode' : periode.id(), 'group' : group.id()}) }}">{{ group.Name }}</a> </td>
                <td><a href="{{ path ('formalibreBulletinPrintGroupPdf', {'periode' : periode.id(), 'group' : group.id()})  }}">Imprimer la classe</a> </td>
                <td><a href="{{ path ('formalibreBulletinPrintGroupPdfEmpty', {'periode' : periode.id(), 'group' : group.id()})  }}">Imprimer un bulletin vide pour la classe</a> </td>
            </tr>
        {% endfor %}
        </table>
    </div>
{% endblock %}